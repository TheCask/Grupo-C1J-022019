<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 
    <class name="ar.edu.unq.desapp.groupj.backend.model.Menu" table="menus">

        <id name="id" column="id" >
            <generator class="identity" />
        </id>

        <property name="name" type="string" column="name" length="100"/>

        <property name="description" type="string" column="description" length="100"/>

        <property name="city" type="string" column="city" length="100"/>

        <property name="price" type="double" column="price" length="100"/>

        <property name="deliveryValue" type="double" column="delivery_value" length="100"/>

        <property name="averageDeliveryTime" type="int" column="average_delivery_time" length="100"/>

        <property name="minimumAmount1" type="int" column="minimum_amount_1" length="100"/>

        <property name="minimumAmount2" type="int" column="minimum_amount_2" length="100"/>

        <property name="minimumAmount1Price" type="double" column="minimum_amount_1_price" length="100"/>

        <property name="minimumAmount2Price" type="double" column="minimum_amount_2_Price" length="100"/>

        <property name="maximumDailySales" type="int" column="maximum_daily_sales" length="100"/>

    </class>

</hibernate-mapping>